--game stuff
function _init()
	tick = 0
	game_over=false
	menu=true
	make_score()
	make_cave()
	make_player()
end

function _update()
 if (not game_over) then
 	update_score()
  update_cave()
	 move_player()
	 check_hit()	
	else
		if(btn(4)) then
			_init()
		end
	end
end

function _draw()
	cls()
	draw_cave()
	draw_player()
	draw_score()
	if(game_over) then
		game_over_message()
	end
end

